<table class = "table table-striped table-bordered table-hover">
  <thead class="thead-dark" >
    <tr>
      <th> Movie Title </th>
      <th> Release Date </th>
      <th> Budget (in Cr.)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @movies.each do |movie| %>
    <tr>
       <a href="/movies/<%= movie.id %>">
       <a href="<%= movie_path(movie) %>">
       <td><%= link_to movie.name,movie %></td>
       <td><%= movie.release_date %></td>
       <td><%= movie.budget %></td>
         <td><%= link_to 'Show', movie, class:"btn btn-outline-dark btn-lg" %></td>
    </tr>
  <% end %>
</tbody>
</table>
<%if current_user && current_user.admin?%>
<button class="btn btn-success btn-lg"><%= link_to "New Movie", new_movie_path %></button> 
<% end %>


