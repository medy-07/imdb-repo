<%if current_user && current_user.admin?%>
  <%= link_to "Add New Movie", new_movie_path, class:"btn btn-success btn-lg"%>
<% end %>
<br/>
<br/>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @movies.each do |movie| %>
  <div class="col">
    <div class="card h-100">
      <img src="<%= movie.attachment %>" class = "img-thumbnail" alt="images">
      <div class="card-body">
        <%= movie.name %>
        <h5 class="card-title"><%= link_to "Show Movie Details",movie %></h5>
        <p class="card-text"></p>
      </div>
    </div>
  </div>
  <% end %>
</div>

<style>
  a{
    text-decoration: none !important;
    color:  green;
  }
</style>